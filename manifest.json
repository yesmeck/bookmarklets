{
  "manifest_version": 2,

  "name": "Bookmarklets",
  "description": "Display bookmarklets on toolbar",
  "version": "1.0",

  "permissions": [
    "bookmarks",
    "tabs",
    "http://*/",
    "https://*/"
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
